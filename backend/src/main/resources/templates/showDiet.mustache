{{>header}} <!-- Incluimos el header -->
{{>navbar}} <!-- Incluimos el navbar -->

    <!-- Vista de Dieta -->
    <div class="container mt-5">
      <h2 class="text-center">Diet Details</h2>

      <div class="mb-3">
        <label class="form-label fw-bold">Diet Name:</label>
        <p class="form-control">Caloric deficit</p>
      </div>

      <div class="mb-3">
        <label class="form-label fw-bold">Diet Number of Calories:</label>
        <p class="form-control">2000 kcal</p>
      </div>

      <div class="mb-3">
        <label class="form-label fw-bold">Diet Goal:</label>
        <p class="form-control">Maintain Weight</p>
      </div>

      <div class="mb-3">
        <label class="form-label fw-bold">Meals of the Day:</label>
        <textarea class="form-control" rows="4" readonly>
                Desayuno – 2 huevos + café
                Comida – Ensalada + 100g pechuga de pollo
                Merienda – Rebanada de pan integral
                Cena – Verduras + 150g de pescado
            </textarea
        >
      </div>

      <div class="mb-3">
        <label class="form-label fw-bold">Comments:</label>
        <button
          class="btn-load w-100"
          onclick="window.location.href='newComment.html'"
        >
          Add Comment
        </button>
      </div>

      <div class="d-flex justify-content-center gap-3">
        <button class="btn-load">Suscribe</button>
        <button class="btn-load" onclick="window.location.href='comments.html'">
          View Comments
        </button>
        <button class="btn-load">Edit</button>
        <button class="btn-load">Delete</button>
        <button
          class="btn-load"
          onclick="window.location.href='nutrition.html'"
        >
          Return
        </button>
      </div>
    </div>
    <!-- Fin Vista de Dieta -->

{{>footer}} <!-- Incluimos el footer -->
